<%= render "layouts/errors", object: @designer %>
<div class="container" style="margin-top:52px;">
  <div class="col-md-6 col-md-offset-3">
    <h2>Add Designer</h2>
    <div class="box">
      <%= form_for @designer, html: {multipart: true } do |f| %>
      <div class="form-group">
        <%= f.label :designer_image, class: 'control-label'  %>
        <%= f.file_field :designer_image, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :name, class: 'control-label'  %>
          <%= f.text_field :designer_name, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :about, class: 'control-label'  %>
          <%= f.text_area :about, class: "form-control", size: "100x10" %>
      </div>
      <div class="actions">
        <%= f.submit "Add", class: 'btn btn-default' %>
        <%= link_to 'Back', designers_path, class: 'btn btn-default' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
