<%= render "layouts/errors", object: @store %>
<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="box">
      <%= form_for @store, html: {multipart: true } do |f| %>
      <div class="form-group">
        <%= f.label :upload_image, class: 'control-label'  %>
        <%= f.file_field :store_image, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :store_name, class: 'control-label'  %>
          <%= f.text_field :store_name, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :about, class: 'control-label'  %>
          <%= f.text_area :about, class: "form-control", size: "100x10" %>
      </div>
      <div class="form-group">
          <%= f.label :street_address, class: 'control-label'  %>
          <%= f.text_field :street_address, class: "form-control" %>
      </div>
      <div class="form-group">
        <div class="col-md-6">
          <%= f.label :zip %>
          <%= f.text_field :zip, class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :phone %>
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
      </div>
      <hr>
      <div class="actions">
        <%= f.submit "Add", class: 'btn btn-default' %>
        <%= link_to 'Back', stores_path, class: 'btn btn-default' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
